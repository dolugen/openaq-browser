(function() {
    'use strict'

    angular
        .module('app.core')
        .service('dateFactory', dateFactory);

    function dateFactory() {
        function yesterday() {
            var _d = new Date(); 
            _d.setDate(_d.getDate() - 1);
            var yesterday = _d.toISOString().slice(0, 10)
            return yesterday
        }

        function weekAgo() {
            var _d = new Date();
            _d.setDate(_d.getDate() - 7);
            var week_ago = _d.toISOString().slice(0, 10);
            return week_ago;
        }

        return {
            yesterday: yesterday,
            weekAgo: weekAgo
        }
    }

})();
